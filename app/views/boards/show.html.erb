<div class="wrapper wrapper__bg">
 <div class="container">
  <%= link_to "back to thread list", boards_path %>
  <hr>
  <div class="board">
   <h1 class="board--name"><%= @board.title %></h1>
  </div>
  <%= link_to "Edit title", edit_board_path %>
  <%= link_to "Delete", board_path(@board), method: :delete, data: { confirm: "Delete this thread?" } %>
  <hr>
  <div class="comment">
   <% @board.comments.each_with_index do |comment, index| %>
   <div class="comment">
    <div class="comment--heading">
     <%= index + 1 %>:
     <%= comment.name %>:
     <%= comment.created_at.strftime("%Y/%m/%d %H:%M:%S ") %>:
     <%= link_to "Delete", board_comment_path(@board, comment), method: :delete, data: { confirm: "Delete this comment?" } %> <br>
    </div>
    <div class="comment--body">
     <%= comment.content %>
    </div>
   </div>
   <% end %>
  </div>
  <hr>
  <%= form_for @comment, url: board_comments_path(@board, @comment) do |f| %>
   Name:    <%= f.text_field :name    %> <br>
   Comment: <%= f.text_area  :content %> <br>
   <%= f.submit %>
  <% end %>
 </div>
